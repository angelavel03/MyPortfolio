---
export interface Props {
	title: string,
    text: string,
    img: string;
}

const { title,text,img } = Astro.props;
---


<div class="card">
    <img src={img} alt="">
    <div class="card-body">
        <h3 class="work-title">{title}</h3>
        <p class="work-text">{text}</p>
    </div>
</div>

<style>

img{
    width: 100%;
    height: 400px;
}
.card{
    color: aliceblue;
    border-radius: 5px;
    background-color: #181822;
    margin: 35px 15px;
}
.card-body {
    padding: 40px;
}
.work-title {
    font-size: 30px;
    line-height: 150%;
}
.work-text {
    font-size: 18px;
    margin-top: 10px;
    line-height: 150%;
    color: rgba(240, 248, 255, 0.8);
}
</style>